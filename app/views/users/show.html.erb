<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
    <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
    </h1>
    <% unless @user.microposts.empty? %>
        <table class="microposts" summary="User microposts">
          <%= render @microposts %>
        </table>
	<%=  paginate @microposts%>
      <% end %>
    <% unless @user.received_microposts.empty? %>
        <table class="received_microposts" summary="User received microposts">
          <% @received_microposts.each do |elem| %>
            <p> author: <%= elem[:author_name]  %> </p>
            <p> <%= elem[:content]  %> </p>
            <p> posted at: <%= elem[:created_at]  %> </p>
          <% end %>
        </table>
      <% end %> 
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %>
      <strong>Microposts</strong> <%= @user.microposts.count %>
    </td>
  </tr>
</table>

